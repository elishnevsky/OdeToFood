@model LoginViewModel
@{ 
    ViewBag.Title = "Login";
}

<h1>Login</h1>

<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl">
    <div asp-validation-summary="@ValidationSummary.ModelOnly"></div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" style="width: 300px" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" style="width: 300px" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="checkbox">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe" />
            Remember Me
        </label>
        <span asp-validation-for="RememberMe"></span>
    </div>
    <div>
        <input type="submit" value="Login" class="btn btn-primary" />
    </div>    
</form>